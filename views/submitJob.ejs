@keyframes loading {
  from {
    transform: rotate(0turn);
  }
  to {
    transform: rotate(1turn);
  }
}

.mycontainer {
  width: 100%;
  height: 220px;
  position: relative;
}

.mycontainer>div {
  font-size: 40px;
  text-transform: uppercase;
  color: #ffe221;
  opacity: 0;
  height: 0px;
  }
.mycontainer>div:nth-child(1){
  animation: animation 32s infinite;
  animation-delay: 4s;
}
.mycontainer>div:nth-child(2){
  animation: animation 32s infinite;
  animation-delay: 8s;
}
.mycontainer>div:nth-child(3){
  animation: animation 32s infinite;
  animation-delay: 12s;
}
.mycontainer>div:nth-child(4){
  animation: animation 32s infinite;
  animation-delay: 16s;
}
.mycontainer>div:nth-child(5){
  animation: animation 32s infinite;
  animation-delay: 20s;
}
.mycontainer>div:nth-child(6){
  animation: animation 32s infinite;
  animation-delay: 24s;
}
.mycontainer>div:nth-child(7){
  animation: animation 32s infinite;
  animation-delay: 28s;
}

@keyframes animation {
    0% {opacity: 0; height: auto;}
    16% {opacity: 1;}
    33% {opacity: 0; height: 0px;}
    100% {opacity: 0; height: 0px;}
}

</style>
<script type="text/javascript">
  function submitJob () {
    const loader = document.querySelector(".loader");
    loader.classList.remove("loader--hidden");
    //loader.innerHTML= "Submitting Job In Sequence...";
    loader.addEventListener("transitionend", () => {
    document.body.removeChild(loader);
  });
    var path = window.location;
    console.log(path.pathname);
    window.location.href = path.pathname + "/submitjced"; 
  }
</script>
